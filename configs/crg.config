params {
  config_profile_name = 'CRG profile'
  config_profile_description = 'Configuration to run on CRG cluster'

  max_cpus = 64
  max_memory = 100.GB
  max_time   = 48.h
}


process {
    executor = 'crg'
    maxRetries = params.max_retries
    errorStrategy = params.err_start

    withLabel:process_low {
          queue = 'cn-el7,short-centos79'
    }
    withLabel:process_medium{
          queue = 'cn-el7,short-centos79'
    }
    withLabel:process_medium_high {
        queue = 'cn-el7,long-centos79'
    }
    withLabel:process_high {
        queue = 'cn-el7,long-centos79'
    }

    withName: 'CHECK_TORCH_MODEL|TORCH_TUNE' {
        if(params.use_gpu){
          cpus = 1
          queue = params.use_gpu ? 'gpu_long' : 'long-sl7'
          clusterOptions = { ( task.queue == 'gpu_long' ? '-l gpu=1' : '' ) }
        }else{
          queue = 'cn-el7,long-centos79'
        }
    }
}


singularity {
    enabled  = true
    cacheDir = 'singularity_cache'
}
